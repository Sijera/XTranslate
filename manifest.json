{
    "name"            : "XTranslate",
    "description"     : "__MSG_0__",
    "version"         : "1.0.4",
    "manifest_version": 2,
    "default_locale"  : "en",
    "options_page"    : "options.html",

    "icons"  : {
        "16" : "img/icons/16.png",
        "48" : "img/icons/48.png",
        "128": "img/icons/128.png"
    },

    "browser_action": {
        "default_icon" : {},
        "default_popup": "popup.html"
    },

    "background": {
        "scripts"   : ["js/require.js", "js/libs/jquery.min.js", "js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": ["img/*", "js/*"],

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file://*/*"],
            "css"    : ["css/injected.css"],
            "js"     : ["js/require.js", "js/libs/jquery.min.js", "js/injected.js"]
        }
    ],

    "permissions": [
        "tabs", "storage",
        "http://translate.google.com/",
        "http://translate.yandex.com/",
        "http://tts.voicetech.yandex.net/",
        "http://api.microsofttranslator.com/"
    ]
}